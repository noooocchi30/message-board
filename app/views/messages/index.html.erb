<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<div class="container">
 <%= form_for(@message) do |f| %>
  <div class="row">
   名前：
  </div>
  <div class="row">
    <%= f.text_area :name %>
  </div>
　
  <div class="row">
   内容：
  </div>
  <div class="row">
    <%= f.text_area :body %>
　</div>
　 
  <div class="row">
    <%= f.submit class: "btn btn-sm btn-primary" %>
  </div>
</div>
<% end %>